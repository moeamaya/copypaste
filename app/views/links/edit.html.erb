<div class="container">
  <div class="section row row-one">
    <div class="col twelve edit">
      <h1>Editing link</h1>

      <%= form_for @links do |f| %>
        <p>
         <%= f.label :name %><br />
         <%= f.text_field :name %>
         </p>
         <p>
           <%= f.label :title %><br />
           <%= f.text_area :title %>
         </p>
         <p>
          <%= f.label :address %><br />
          <%= f.text_area :address %>
        </p>
        <p>
          <%= f.label :description %><br />
          <%= f.text_area :description, :rows => '4' %>
        </p>
        <p>
        	<%= f.submit "Update link", :class => "button" %>
        </p>
      <% end %>
    </div>
  </div>
</div>